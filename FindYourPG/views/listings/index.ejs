<% layout('/layouts/boilerplate.ejs') %>
<style>
	#filter-bar {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	#filter-container {
		display: flex;
		overflow: auto;
		width: 60%;
		margin-top: 1.5rem;
	}

	#filter-container::-webkit-scrollbar {
		display: none;
	}

	.filter-option {
		text-align: center;
		margin: 0 1rem;
		opacity: 0.7;
		border-bottom: 2px solid #fff;
		white-space: nowrap;
	}

	.filter-option:hover {
		opacity: 1;
		cursor: pointer;
		border-color: rgba(0, 0, 0, 0.5);
	}

	.filter-option:active {
		opacity: 1;
		cursor: pointer;
		border-color: black;
	}

	.filter-option p {
		font-size: 0.8rem;
	}

	.slide-btn {
		background-color: white;
		border: none;
	}

	.arrows {
		font-size: 1.5rem;
	}

	#btn-contain {
		display: flex;
	}

	#tax-info {
		display: none;
	}

	.tax-toggle,
	#filter-btn {
		border: 1px solid rgba(0, 0, 0, 0.3);
		border-radius: 10px;
		padding: 1rem;
		height: 3rem;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 0.9rem;
		margin: 0.5rem 0.25rem;
	}

	.tax-toggle:hover,
	#filter-btn:hover {
		cursor: pointer;
		border-color: rgba(0, 0, 0, 1);
		background-color: rgb(240, 240, 240);
	}

	@media screen and (max-width: 768px) {
		#filter-bar {
			flex-direction: column;
			align-items: start;
		}
		.tax-toggle,
		#filter-btn {
			padding: 0.8rem;
			height: 2rem;
			font-size: 0.7rem;
			margin: 0.3rem;
		}
		#filter-container {
			width: 100%;
		}
		.slide-btn {
			display: none;
		}
	}
</style>

